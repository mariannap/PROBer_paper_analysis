#!/usr/bin/env python

from sys import argv, exit

def convert(arr):
    arr = arr[1:]
    arr.append(0.0)
    total = max(sum(arr), 1.0)
    arr = [max(x, 1.0) / total for x in arr]
    
    return arr

    
if len(argv) != 4:
    print("Usage: python calcModseq minus.counts plus.counts output.txt")
    exit(-1)

fm = open(argv[1])
fp = open(argv[2])
fout = open(argv[3], "w")

cnt = 0
for line in fm:
    line2 = fp.readline()
    mc = convert([float(x) for x in line[:-1].split()])
    mp = convert([float(x) for x in line2[:-1].split()])
    modseq = [y / x for (x, y) in zip(mc, mp)])
    fout.write(" ".join([str(x) for x in modseq]) + "\n")

    cnt = cnt + 1
    if cnt % 1000 == 0:
        print("{} FIN!".format(cnt))

fm.close()
fp.close()
fout.close()
